<div>
  <div class="pull-right">
    <%= form_tag my_house_blog_blog_images_path(blog_id: @blog), method: :post, enctype: "multipart/form-data", class: "form-horizontal" do %>
      <input type="file" name="images[]" multiple class="image-input" />
      <%= submit_tag "上传", class: "btn btn-primary" %>
    <% end -%>
  </div>

  <h1> 
    Blog #<%= @blog.id %> <%= @blog.title %> 
  </h1>
</div>

<div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>图片</th>
      <th></th>
    </tr>

    <% @blog_images.each do |blog_image| %>
      <tr>
        <td><%= blog_image.id %></td>
        <td><%= image_tag blog_image.image.url(:middle) %></td>
 
        <td align="right">
          <%= link_to "删除", my_house_blog_blog_image_path(@blog, blog_image), method: :delete, 'data-confirm': "确认删除吗?" %>
        </td>
      </tr>
    <% end -%>
  </table>

</div>
