<h1><%= @blog.title %></h1>
<div class="row">
  <% @blog.blog_images.each do |blog_image| %>
    <div class="col-xs-6 col-md-3">
      <a href="#" class="thumbnail detail">
        <%= image_tag blog_image.image.url(:middle) %>
      </a>
    </div>
  <% end -%>
</div>

<ul class="list-unstyled">
  <li>
    <% @blog.tags.each do |tag| %>
      <span class="badge"><%= tag.title %></span>
    <% end -%>
  </li>
</ul>

<br />
<br />
<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="javascript:;">具体内容</a></li>
</ul>
<br />
<div>
  <%= markdown @blog.content %>
</div>